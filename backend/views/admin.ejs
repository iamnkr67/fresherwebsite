<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <style>
        .hidden {
            display: none;
        }
        .button-link {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h1>Welcome, <%= user %>!</h1>
    <button id="showBtn">Show Contestant Details</button>
    <button id="otherBtn">Other Button</button>
    <a href="/logout" class="button-link">Logout</a>

    <div id="contestantDetails" class="hidden">
        <h2>Contestant Details</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Roll No</th>
                    <th>Phone</th>
                    <th>Year</th>
                </tr>
            </thead>
            <tbody>
                <% if (contestants && contestants.length > 0) { %>
                    <% contestants.forEach(contestant => { %>
                        <tr>
                            <td><%= contestant.name %></td>
                            <td><%= contestant.rollNo %></td>
                            <td><%= contestant.phone %></td>
                            <td><%= contestant.year %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4">No contestants found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script>
        document.getElementById('showBtn').addEventListener('click', function() {
            const detailsDiv = document.getElementById('contestantDetails');
            if (detailsDiv.classList.contains('hidden')) {
                detailsDiv.classList.remove('hidden');
            } else {
                detailsDiv.classList.add('hidden');
            }
        });
    </script>
</body>
</html>